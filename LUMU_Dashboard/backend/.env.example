# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/lumu_dashboard

# Google Analytics 4
GA4_PROPERTY_ID=your_ga4_property_id
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-credentials.json

# Google Ads API
GOOGLE_ADS_CUSTOMER_ID=your_customer_id
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token

# Meta (Facebook) Ads API
META_ACCESS_TOKEN=your_meta_access_token
META_AD_ACCOUNT_ID=your_ad_account_id

# ClickCease API
CLICKCEASE_API_KEY=your_clickcease_api_key
CLICKCEASE_DOMAIN=your_domain.com

# Microsoft Clarity
CLARITY_PROJECT_ID=your_clarity_project_id
CLARITY_API_KEY=your_clarity_api_key

# n8n Webhook URLs (from n8n Cloud)
N8N_WEBHOOK_DAILY_REPORT=https://your-n8n-instance.app.n8n.cloud/webhook/daily-report
N8N_WEBHOOK_BUDGET_ALERT=https://your-n8n-instance.app.n8n.cloud/webhook/budget-alert
N8N_WEBHOOK_FRAUD_ALERT=https://your-n8n-instance.app.n8n.cloud/webhook/fraud-alert

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
